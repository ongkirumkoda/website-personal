# ==============================================
# SIRAGA Environment Configuration
# ==============================================

# Application Settings
APP_NAME="SIRAGA"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost/siraga
BASE_PATH=/siraga
APP_KEY=

# PENTING: Sesuaikan BASE_PATH dengan folder Anda:
# - Jika di http://localhost/siraga maka BASE_PATH=/siraga
# - Jika di http://localhost/ maka BASE_PATH=/

# ==============================================
# Database Configuration
# ==============================================

DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_NAME=siraga_db
DB_USER=root
DB_PASS=

# CATATAN: Sesuaikan DB_PASS dengan password MySQL Anda
# Default XAMPP biasanya kosong

# ==============================================
# Application Settings
# ==============================================

TIMEZONE=Asia/Jakarta
LOCALE=id_ID
SESSION_LIFETIME=7200

# ==============================================
# Mail Configuration (Optional)
# ==============================================

MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@siraga.com
MAIL_FROM_NAME="${APP_NAME}"

# ==============================================
# Google OAuth (Optional)
# ==============================================

GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=

# ==============================================
# Twilio SMS (Optional)
# ==============================================

TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# ==============================================
# WhatsApp API (Optional)
# ==============================================

WHATSAPP_API_URL=
WHATSAPP_API_TOKEN=

# ==============================================
# File Upload Settings
# ==============================================

UPLOAD_MAX_SIZE=10485760
ALLOWED_EXTENSIONS=jpg,jpeg,png,pdf,doc,docx

# ==============================================
# Security Settings
# ==============================================

CSRF_TOKEN_LIFETIME=3600
PASSWORD_MIN_LENGTH=8
SESSION_SECURE=false
SESSION_HTTPONLY=true

# ==============================================
# API Settings
# ==============================================

API_RATE_LIMIT=60
API_RATE_LIMIT_PERIOD=60
JWT_SECRET=
JWT_EXPIRATION=3600

# ==============================================
# Logging
# ==============================================

LOG_CHANNEL=file
LOG_LEVEL=debug
LOG_PATH=storage/logs

# ==============================================
# Cache Settings
# ==============================================

CACHE_DRIVER=file
CACHE_PREFIX=siraga_

# ==============================================
# Development Tools
# ==============================================

DEBUGBAR_ENABLED=true
QUERY_LOG_ENABLED=true
