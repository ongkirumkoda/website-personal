# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=siraga_db
DB_USER=root
DB_PASS=

# Application Configuration
APP_NAME=SIRAGA
APP_ENV=development
APP_URL=http://localhost/siraga
APP_DEBUG=true
APP_KEY=your-secret-key-here-change-this

# Session Configuration
SESSION_LIFETIME=7200
SESSION_NAME=SIRAGA_SESSION

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost/siraga/auth/google/callback

# Email Configuration (PHPMailer)
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@siraga.com
MAIL_FROM_NAME=SIRAGA System

# Twilio Configuration (WhatsApp & SMS)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# JWT Configuration (API Mobile)
JWT_SECRET=your-jwt-secret-key-change-this
JWT_EXPIRATION=86400

# File Upload Configuration
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,pdf

# Logging Configuration
LOG_LEVEL=debug
LOG_FILE=logs/app.log
